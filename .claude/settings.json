{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Starting agent task: ' && echo $TOOL_INPUT | jq -r '.description // \"Unknown task\"'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write.*json",
        "hooks": [
          {
            "type": "command", 
            "command": "echo 'JSON prompt file generated successfully'"
          }
        ]
      }
    ]
  }
}